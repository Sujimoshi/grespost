{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}